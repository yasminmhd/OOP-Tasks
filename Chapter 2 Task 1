package arithmeticprog;
import java.util.Scanner;
public class ArithmeticProg {

    public static void main(String[] args) {
        
        Scanner scan=new Scanner(System.in);
        
        float num1,num2,sum,subs,mul,div,mod,inc1,inc2,dec1,dec2;
        
        //ask for user input
        System.out.println("Enter the first number: ");
        num1=scan.nextInt();
        
        System.out.println("Enter the second number: ");
        num2=scan.nextInt();
        
        scan.close();
        
        //formula for calculation
        sum=num1+num2;
        subs=num1-num2;
        mul=num1*num2;
        div=num1/num2;
        mod=num1%num2;
        inc1=++num1;
        dec2=--num2;
        
        //print the final value
        System.out.println("Addition: "+sum);
        System.out.println("Subtraction: "+subs);
        System.out.println("Multiplication: "+mul);
        System.out.println("Division: "+ String.format("%.2f",div));
        System.out.println("Modulus: "+mod);
        System.out.println("Increment Number 1: "+inc1);
        System.out.println("Decrement Number 2: "+dec2);
    } 
}
